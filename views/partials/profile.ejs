
<% profiles.forEach(function(item){ %>
<%  if(item.profiledetails){ %>
    <div class="row profilecard">
    <div class="col-lg-12">
    </div>
    <div class="col-lg-3 col-sm-12 col-md-4">
      <img class="roundImg" style="width:90%;" src='<%=item.profiledetails.imgurl%>' alt="">
    </div>
    <div class="col-lg-9 col-sm-12 col-md-8">
      <h5 class="profileFullName" onclick="window.location.href='/main'">Name:<%=item.profiledetails.fullname%></h5>
      <h5>Intrests:<%=item.profiledetails.intrests%></h5>
      <h5>Country:<%=item.profiledetails.country%> </h5>
      <h5>Bio.<%=item.profiledetails.bio%></h5>
    </div>

    <form class="" action="/messages" method="post">
<input type="hidden" name="receiverEmail" value="<%=item.profiledetails.username%>">
<input type="hidden" name="receiverName" value="<%=item.profiledetails.fullname%>">
<button class="btn btn-link" type="submit" name="button"><i class="fas fa-comments"></i></button>
    </form>
    </div>
  <%}%>


<% })%>
